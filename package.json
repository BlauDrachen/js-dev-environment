{
    "name": "js-dev-environment",
    "version": "0.1.10",
    "description": "This project acts as a boilerplate for Web Development",
    "author": "Nathaniel Riehl",
    "license": "MIT",
    "scripts": {
        "prestart": "babel-node buildScripts/startMessage.js",
        "start": "npm-run-all --parallel security-check open:src lint:watch test:watch start-mockapi",
        "open:src": "babel-node buildScripts/srcServer.js",
        "security-check": "nsp check",
        "localtunnel": "lt --port 3000",
        "share": "npm-run-all --parallel open:src localtunnel",
        "lint": "tslint -c tslint.json -t verbose webpack.config.* src/**/*.[tj]s buildScripts/*.[tj]s",
        "lint:watch": "chokidar webpack.config.* src/**/*.[tj]s buildScripts/**/*.[tj]s -c \"npm run lint\" --initial --verbose",
        "test": "mocha --reporter nyan buildScripts/testSetup.js \"src/**/*.test.js\"",
        "test:watch": "npm run test -- --watch",
        "generate-mock-data": "babel-node buildScripts/generateMockData.js",
        "prestart-mockapi": "npm run generate-mock-data",
        "start-mockapi": "json-server --watch src/api/db.json --port 3001",
        "clean-dist": "rimraf ./dist && mkdir dist",
        "prebuild": "npm-run-all clean-dist test lint",
        "build": "babel-node buildScripts/build.js",
        "postbuild": "babel-node buildScripts/distServer.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BlauDrachen/js-dev-environment.git"
    },
    "bugs": {
        "url": "https://github.com/BlauDrachen/js-dev-environment/issues"
    },
    "homepage": "https://github.com/BlauDrachen/js-dev-environment#readme",
    "dependencies": {
        "whatwg-fetch": "1.0.0"
    },
    "devDependencies": {
        "babel-cli": "6.16.0",
        "babel-core": "6.17.0",
        "babel-loader": "6.2.5",
        "babel-preset-env": "^1.6.1",
        "babel-register": "6.16.3",
        "chai": "3.5.0",
        "chalk": "1.1.3",
        "cheerio": "0.22.0",
        "chokidar": "^1.7.0",
        "chokidar-cli": "^1.2.0",
        "compression": "^1.7.1",
        "cross-env": "3.1.3",
        "css-loader": "0.25.0",
        "express": "^4.16.2",
        "extract-text-webpack-plugin": "1.0.1",
        "html-webpack-plugin": "2.22.0",
        "jsdom": "9.8.0",
        "json-schema-faker": "0.3.6",
        "json-server": "0.8.22",
        "localtunnel": "1.8.1",
        "mocha": "3.1.2",
        "nock": "8.1.0",
        "npm-run-all": "3.1.1",
        "nsp": "2.6.2",
        "numeral": "1.5.3",
        "open": "0.0.5",
        "rimraf": "2.5.4",
        "style-loader": "0.13.1",
        "tslint": "^5.8.0",
        "tslint-eslint-rules": "^4.1.1",
        "ts-loader": "^3.0.5",
        "typescript": "^2.5.3",
        "webpack": "1.13.2",
        "webpack-dev-middleware": "1.8.4",
        "webpack-hot-middleware": "2.13.0",
        "webpack-md5-hash": "0.0.5"
    }
}
