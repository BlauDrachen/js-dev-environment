{
    "name": "js-dev-environment",
    "version": "0.1.17",
    "description": "This project acts as a boilerplate for Web Development",
    "author": "Nathaniel Riehl",
    "license": "MIT",
    "scripts": {
        "prestart": "babel-node utils/build/startMessage.js",
        "start": "npm-run-all --parallel open:src lint:watch test:watch start-mockapi",
        "open:src": "babel-node utils/build/srcServer.js",
        "localtunnel": "lt --port 3000",
        "security-check": "npm audit",
        "share": "npm-run-all --parallel open:src localtunnel",
        "lint": "tslint -c tslint.json -t verbose webpack.config.* src/**/*.[tj]s buildScripts/*.[tj]s",
        "lint:watch": "chokidar webpack.config.* src/**/*.[tj]s utils/build/**/*.[tj]s -c \"npm run lint\" --initial --verbose",
        "test": "mocha --reporter nyan utils/build/testSetup.js \"src/**/*.test.js\"",
        "test:watch": "npm run test -- --watch",
        "generate-mock-data": "babel-node utils/build/generateMockData.js",
        "prestart-mockapi": "npm run generate-mock-data",
        "start-mockapi": "json-server --watch src/api/db.json --port 3001",
        "clean-dist": "rimraf ./dist && mkdir dist",
        "prebuild": "npm-run-all clean-dist test lint",
        "build": "babel-node utils/build/build.js",
        "postbuild": "babel-node utils/build/distServer.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BlauDrachen/js-dev-environment.git"
    },
    "bugs": {
        "url": "https://github.com/BlauDrachen/js-dev-environment/issues"
    },
    "homepage": "https://github.com/BlauDrachen/js-dev-environment#readme",
    "dependencies": {
        "whatwg-fetch": "^3.0.0"
    },
    "devDependencies": {
        "@types/node": "^10.12.18",
        "@types/webpack": "^4.4.24",
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.2.2",
        "@babel/node": "^7.2.2",
        "@babel/preset-env": "^7.3.1",
        "@babel/register": "^7.0.0",
        "awesome-typescript-loader": "^5.2.1",
        "babel-loader": "^8.0.5",
        "chai": "^4.2.0",
        "chalk": "^2.4.2",
        "cheerio": "^1.0.0-rc.2",
        "chokidar": "^2.0.4",
        "chokidar-cli": "^1.2.1",
        "compression": "^1.7.3",
        "cross-env": "^5.2.0",
        "css-loader": "^2.1.0",
        "express": "^4.17.3",
        "extract-text-webpack-plugin": "^3.0.2",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "jsdom": "^13.1.0",
        "json-schema-faker": "0.4.6",
        "json-server": "^0.14.2",
        "localtunnel": "^1.9.1",
        "mocha": "^5.2.0",
        "nock": "^10.0.6",
        "npm-run-all": "^4.1.5",
        "numeral": "^2.0.6",
        "open": "^6.0.0",
        "raw-loader": "^1.0.0",
        "rimraf": "^2.6.3",
        "style-loader": "^0.23.1",
        "tslint": "^5.12.1",
        "tslint-eslint-rules": "^5.4.0",
        "ts-loader": "^5.3.3",
        "ts-node": "^8.0.2",
        "typescript": "^3.2.4",
        "webpack": "^4.29.0",
        "webpack-dev-middleware": "^3.5.1",
        "webpack-hot-middleware": "^2.24.3",
        "webpack-md5-hash": "^0.0.6"
    }
}
